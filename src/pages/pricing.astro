---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: '服务商',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="服务商"
    title="众多税优服务商选择"
    subtitle="期待与您合作共赢"
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="税优展示"
    subtitle="具体合作请联系我们"
    prices={[
      {
        title: '常规业务',
        subtitle: '推广/配送...',
        price: 1,
        period: '业务额度：1亿/月',
        items: [
          {
            description: '单人单月限额30,000',
          },
          {
            description: '18-65岁',
          },
          {
            description: '30+类目选择',
          },
          {
            description: 'T+1日业务开票',
          },
        ],
        callToAction: {
          target: '_blank',
          text: '合作洽谈',
          href: 'https://work.weixin.qq.com/ca/cawcde6d443537b621',
        },
      },
      {
        title: '常规业务',
        subtitle: '推广/配送/物流等...',
        price: 2,
        period: '业务额度：1.5亿/月',
        items: [
          {
            description: '单人单月限额98,000',
          },
          {
            description: '18-65岁',
          },
          {
            description: '50+类目选择',
          },
          {
            description: 'T+1日业务开票',
          },
          {
            description: '多主体选择',
          },
        ],
        callToAction: {
          target: '_blank',
          text: '合作洽谈',
          href: 'https://work.weixin.qq.com/ca/cawcde6d443537b621',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: '敏感业务',
        subtitle: '医疗/建筑/主播等...',
        price: 3,
        period: '业务额度：8000W/月',
        items: [
          {
            description: '单人单月限额98,000',
          },
          {
            description: '18-65岁',
          },
          {
            description: '80+类目选择',
          },
          {
            description: 'T+1日业务开票',
          },
        ],
        callToAction: {
          target: '_blank',
          text: '合作洽谈',
          href: 'https://work.weixin.qq.com/ca/cawcde6d443537b621',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="多税优服务商"
    subtitle="根据您的业务为您匹配税优服务商"
    columns={2}
    items={[
      {
        title: '费率优惠',
        description: '价格具有竞争优势',
        icon: 'tabler:stairs',
      },
      {
        title: '透明选择',
        description: '直签合同，没有隐藏费用或意外费用',
        icon: 'tabler:flip-vertical',
      },
      {
        title: '安全的付款方式',
        description: '平台专属资金账户，支付网关保障您的资金安全',
        icon: 'tabler:shield-lock',
      },
      {
        title: '即时访问',
        description: `随时查看您的专属账户余额与流水`,
        icon: 'tabler:accessible',
      },
      {
        title: '升级价值',
        description: '根据业务为您定制',
        icon: 'tabler:chevrons-up',
      },
      {
        title: '24 小时支持',
        description: '实时聊天、电话为您提供业务支撑',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="开启税优服务商入驻"
    tagline="简化流程"
    isReversed={true}
    items={[
      {
        title: '沟通意向',
        icon: 'tabler:number-1',
      },
      {
        title: '选择服务商',
        icon: 'tabler:number-2',
      },
      {
        title: '签署合同',
        icon: 'tabler:number-3',
      },
      {
        title: '系统开户',
        icon: 'tabler:number-4',
      },
      {
        title: '资金充值',
        icon: 'tabler:number-5',
      },
      {
        title: '结算付款',
        icon: 'tabler:number-6',
      },
      {
        title: '申请开票',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1536816579748-4ecb3f03d72a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />
  <!-- FAQs Widget ******************* -->

  <FAQs
    title="常见问题"
    subtitle="常见问题解答"
    columns={1}
    items={[
      {
        title: '这些服务商是否提供客户支持？',
        description:
          '当然，所有服务商都包括我们专门的客户支持，以帮助您解决任何疑问或疑虑。',
      },
      {
        title: '我可以在服务商之间切换吗？',
        description:
          "当然可以！您可以根据项目情况更改，以找到最适合您不断变化的需求的税优服务商。",
      },
      {
        title: '你们接受什么付款方式？',
        description:
          '银行卡/支付宝/微信...',
      },
      {
        title: '达成合作需要多久?',
        description:
          '全流程线上开户，快速响应。',
      },
      ]}
  />
</Layout>
