---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Brands from '~/components/widgets/Brands.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: '点薪云 — 灵活用工行业方案解决提供商',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: '登录点薪结算系统',
        href: 'https://www.dianxingg.cn/',
        target: '_blank',
        icon: 'tabler:stars',
      },
      { text: '联系我们', href: 'https://work.weixin.qq.com/ca/cawcde6d443537b621' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      全行业技术赋能<br> <span class="hidden xl:inline">为企业</span>
      <span class="text-accent dark:text-white highlight"> 降本增效</span> 
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">点薪云</span> 构建覆盖全国的区域化税地服务商网络.</span
      ><br>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">为企业和自由职业者.</span>
      提供合规高效的灵活用工解决方案.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="解决方案"
    tagline="解决方案"
    title="点薪云能提供什么？"
    subtitle="四大场景全覆盖，精准匹配企业需求."
    items={[
      {
        title: '成本优化',
        description:
          '社保入税新政下的人力成本重构方案.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: '风险防控',
        description:
          '全流程税务合规保障，规避用工法律风险.',
        icon: 'tabler:components',
      },
      {
        title: '数据洞察',
        description:
          '全线上数据+可视化看板，掌控用工全貌.',
        icon: 'tabler:list-check',
      },
      {
        title: '收入保障',
        description:
          'T+0到账，告别拖欠账款.',
        icon: 'tabler:rocket',
      },
      {
        title: '税务无忧',
        description:
          "线上任务开票降本30% | 提效50% | 合规100%.",
        icon: 'tabler:arrows-right-left',
      },
      {
        title: '行业定制',
        description:
          '互联网/物流/制造业等垂直领域专属解决方案.',
        icon: 'tabler:bulb',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="点薪云产品功能"
    title="全链路数字化结算，重构用工生态!"
    items={[
      {
        title: '智能结算引擎',
        description:
          '多地税政一键适配， 多场景适配 | 自动化计算 | 智能税务申报.',
      },
      {
        title: '全维度合规保障',
        description:
          '电子合同+区块链存证，四流合一存证 | 政策动态同步 | 风险预警系统.',
      },
      {
        title: '生态互联能力',
        description:
          'API开放平台 | 主流SaaS无缝对接 | 多银行通道.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">数据流动/智能结算</h3>
      提供专业解决方案
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: '百万级日订单并发处理',
      },
      {
        title: '多层级项目管理架构',
      },
      {
        title: '实时成本可视化看板',
      },
      {
        title: '银企直连代发零差错',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">规模化用工的结算中枢，金融级安全架构，护航百亿级交易！</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: '银行卡/支付宝秒级到账',
      },
      {
        title: '电子合约在线签署存证',
      },
      {
        title: '多平台收入智能聚合',
      },
      {
        title: '个性化方案推荐',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611462985358-60d3498e0364?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Astronauts Image',
    }}
  >
    <Fragment slot="content">您的云端薪酬管家.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="众多行业应用场景，已选择我们！"
    items={[
      {
        title: ' <span class="font-medium">零工经济</span>',
        description:
          "日结/周结/项目结多模式自由切换，骑手/网约车司机/家政人员全覆盖.",
        icon: 'tabler:package',
      },
      {
        title: ' <span class="font-medium">众包平台</span>',
        description:
          "支持B2B2C多角色分账，自动化佣金计算与发放.",
        icon: 'tabler:letter-case',
      },
      {
        title: '<span class="font-medium">项目制用工</span>',
        description:
          '按阶段释放项目资金，进度与结算智能联动.',
        icon: 'tabler:paint',
      },
      {
        title: '选择&合作!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->
  <Brands
  title="Partnerships & Collaborations"
  subtitle="At Astrowind, we believe in the power of collaboration to drive innovation and create exceptional experiences."
  icons={[]}
  images={[
    {
      src: 'https://oss.dianxin.love/logo/alipay.png',
      alt: 'alipay',
    },
    {
      src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png',
      alt: 'Visa',
    },
    {
      src: 'https://oss.dianxin.love/logo/alipay.png',
      alt: 'meituan',
    },

    {
      src: 'https://oss.dianxin.love/logo/eleme.png',
      alt: 'eleme',
    },
    {
      src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png',
      alt: 'Microsoft',
    },
    {
      src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
      alt: 'Node JS',
    },
    {
      src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png',
      alt: 'Google',
    },
    {
      src: 'https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png',
      alt: 'Meta',
    },
    {
      src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png',
      alt: 'Yahoo',
    },
  ]}
/>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="常见问题"
    subtitle=""
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: '为什么选择点薪云?',
        description:
          "点薪云有专业的灵活用工行业经验，10+自运营税地服务商，7×24小时响应.",
      },
      {
        title: '结算到账时效?',
        description:
          'T+0到账，告别拖欠账款.',
      },
      {
        title: '平台数据安全吗?',
        description:
          "国密算法加密，敏感数据脱敏处理，自研结算系统 公安部二级等级保护.",
      },
      {
        title: "支持什么通道?",
        description:
          "银行卡/支付宝/微信等多通道支持.",
      },
      {
        title: '怎么达成合作?',
        description:
          "获取您的专属解决方案",
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: '已服务企业', amount: '5200+' },
      { title: '月结算资金', amount: '5.8亿' },
      { title: '月结算笔数', amount: '20.3K' },
      { title: '异常拦截率', amount: '100%' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: '获取专属解决方案',
        text: '获取专属方案',
        href: 'https://work.weixin.qq.com/ca/cawcde6d443537b621',
        target: '_blank',
        icon: 'tabler:phone',
      },
    ]}
  >
    <Fragment slot="title">
      点薪云&nbsp;+&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">期待您的合作！</span>
    </Fragment>

    <Fragment slot="subtitle">
      191-1359-2345 | 7x12小时专家支持
    </Fragment>
  </CallToAction>
</Layout>
