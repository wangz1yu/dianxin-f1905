---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: '灵工签约系统',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="签约系统"
    title="自由职业者协议签约系统"
    subtitle="二维码扫码签约，人脸识别确认签署便捷安全."
    actions={[{ variant: 'primary', target: '_blank', text: '获取演示', href: 'https://oss.dianxin.love/%E7%82%B9%E8%96%AA%E7%BB%93%E7%AE%97%E7%B3%BB%E7%BB%9F%E4%BC%81%E4%B8%9A%E7%AB%AF%E7%AE%80%E4%BE%BF%E6%93%8D%E4%BD%9C%E6%89%8B%E5%86%8CV1.0.pdf' }]}
    image={{
      src: 'https://pub-1de1960ea09140648db9b15c73679b65.r2.dev/qianshu.png',
      alt: 'AstroWind Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="全线上流程，可控出证"
    subtitle="数据/认证/行业覆盖"
    columns={3}
    items={[
      {
        title: '智能合同工场',
        description:
          '多合同模版智能匹配，电子签章法律效力等同纸质',
        icon: 'tabler:contract',
      },
      {
        title: '风控合规中心',
        description:
          '区块链全程存证+双重生物认证，签约行为可追溯防篡改',
        icon: 'tabler:brightness-auto',
      },
      {
        title: '生态互联中枢',
        description:
          '支持API对接，构建企业-自由职业者-服务商数字化协作网络',
        icon: 'tabler:cloud-data-connection',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="客户评价"
    testimonials={[
      {
        testimonial: `签约速度很快，操作便捷！`,
        name: '配送人员',
        job: '自由职业者',
        image: {
          src: 'https://pub-1de1960ea09140648db9b15c73679b65.r2.dev/people/qishou.png',
          alt: 'Emily Kennedy Image',
        },
      },
      {
        testimonial: `整个流程不到二分钟`,
        name: '推广人员',
        job: '自由职业者',
        image: {
          src: 'https://pub-1de1960ea09140648db9b15c73679b65.r2.dev/people/ditui.png',
          alt: 'Sarah Hansen Image',
        },
      },
      {
        testimonial: `人员注册签约，后台可随时查看签约进度和状态！`,
        name: 'XX科技公司',
        job: '用工企业',
        image: {
          src: 'https://images.unsplash.com/photo-1545167622-3a6ac756afa4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=824&q=80',
          alt: 'Mark Wilkinson Image',
        },
      },
    ]}
    callToAction={{
      target: '_blank',
      text: '我们期待更多评价...',
      href: '#',
      icon: 'tabler:chevron-right',
    }}
  />
</Layout>
